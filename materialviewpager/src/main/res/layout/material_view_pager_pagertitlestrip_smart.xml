<?xml version="1.0" encoding="utf-8"?>
<com.ogaclejapan.smarttablayout.SmartTabLayout
    android:id="@id/materialviewpager_pagerTitleStrip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:stl_clickable="true"
    app:stl_defaultTabBackground="?attr/selectableItemBackground"
    app:stl_defaultTabTextAllCaps="true"
    app:stl_defaultTabTextColor="#FFF"
    app:stl_defaultTabTextHorizontalPadding="25dp"
    app:stl_defaultTabTextMinWidth="0dp"
    app:stl_defaultTabTextSize="16sp"
    app:stl_distributeEvenly="false"
    app:stl_dividerThickness="0dp"
    app:stl_drawDecorationAfterTab="true"
    app:stl_indicatorAlwaysInCenter="true"
    app:stl_indicatorColor="#FFF"

    app:stl_indicatorCornerRadius="1dp"
    app:stl_indicatorGravity="bottom"
    app:stl_indicatorInterpolation="smart"
    app:stl_indicatorThickness="3dp"
    app:stl_indicatorWidth="auto"
    app:stl_indicatorWithoutPadding="true"
    app:stl_overlineColor="#FF0000"
    app:stl_overlineThickness="0dp"
    app:stl_titleOffset="50dp"
    app:stl_underlineColor="#4D000000"
    app:stl_underlineThickness="0dp"
    />